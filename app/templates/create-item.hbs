<h2>Create New Menu Item</h2>
{{!-- {{item=model}} --}}
<p>name is {{name}}</p>
<p>description is {{description}}</p>
<p>price is {{price}}</p>
<p>category is {{category}}</p>
{{!-- <form {{action 'createNewItem' name description price category on='submit'}}> --}}
<form {{action 'createNewItem' name description price category on='submit'}}>
  <div class="form-group">
    <label for="itemName">Item Name</label>
    {{input type="text" placeholder="Enter a name" class="form-control" value=name}}
    <label for="itemDescription">Item Description</label>
    {{input type="text" placeholder="Enter a description" class="form-control" value=description}}
    <label for="itemPrice">Item Price</label>
    {{input type="number" min="0" step=".01" placeholder="Enter a price" class="form-control" value=price}}
    <label for="itemCategory">Item Category</label>
    {{input type="text" placeholder="Enter a category" class="form-control" value=category}}
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
